-   years += yearIn4 - 1;
-   days -= daysIn4Years[leap][yearIn4 - 1];
-
-   // only the first year can be leap
-   if (yearIn4 > 1)
-      leap = 0;
-
-   // adjust the years between 0 A.D. and 2 A.D. to 1.A.D. to 3 A.D.
-   if (years >= 0 && years <= 2) years++;
-
-   int month;
-   for (month = 1; month < 13; month++)
